<%- include('partials/adminHeader') %>

        <div class="alpha-app">
          <div class="page-header">
            <%- include('partials/adminNavbar') %>
          </div>
            
          <%- include('partials/adminSidebar') %>

          <div class="page-content">
            <div class="container-fluid">
              <div class="row">
                <div class="col-sm-10 offset-sm-1">
                  <form class="form">
                    <h5>Edit <%= helpers.capitalise(userData.role) %> Account</h5>
                    <br>
                    <div class="input-group">
                      <label for="firstName">First Name</label>
                      <input type="text" name="firstName" id="firstName" placeholder="Your first name" required class="browser-default" value="<%= userData.firstName %>">
                      <img src="/images/icons/person-icon.png" alt="person icon">
                    </div>

                    <div class="input-group">
                      <label for="lastName">Last Name</label>
                      <input type="text" name="lastName" id="lastName" placeholder="Your last name" required class="browser-default" value="<%= userData.lastName %>">
                      <img src="/images/icons/person-icon.png" alt="person icon">
                    </div>

                    <div class="input-group">
                      <label for="username">Username</label>
                      <input type="text" name="username" id="username" placeholder="Your username" required class="browser-default" value="<%= userData.username %>" disabled>
                      <img src="/images/icons/person-icon.png" alt="person icon">
                    </div>

                    <div class="input-group">
                      <label for="gender">Gender</label>
                      <select name="gender" id="gender" required class="browser-default">
                        <option value="unknown" <% if (userData.gender === 'unknown') { %> selected <% } %>>Prefer not to say</option>
                        <option value="male" <% if (userData.gender === 'male') { %> selected <% } %>>Male</option>
                        <option value="female" <% if (userData.gender === 'female') { %> selected <% } %>>Female
                        </option>
                      </select>
                      <img src="/images/icons/person-icon.png" alt="person icon">
                    </div>

                    <div class="input-group">
                      <label for="address">Address</label>
                      <input type="text" name="address" id="address" placeholder="Enter your address" required class="browser-default" value="<%= userData.address %>">
                      <img src="/images/icons/location-icon.png" alt="address icon">
                    </div>

                    <div class="input-group">
                      <label for="phoneNumber">Phone Number</label>
                      <input type="number" name="phoneNumber" id="phoneNumber" placeholder="Enter your phone number" required class="browser-default" value="<%= userData.phoneNumber %>">
                      <img src="/images/icons/telephone-icon.png" alt="telephone icon" />
                    </div>

                    <div class="input-group">
                      <label for="email">Email Address</label>
                      <input type="text" name="email" id="email" placeholder="Enter your email address" required class="browser-default" value="<%= userData.email %>">
                      <img src="/images/icons/message-icon.png" alt="email icon">
                    </div>

                    <button type="submit" class="btn btn-primary big-button float-right">Update Account</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>

        <%- include('../partials/appLoader') %>
        
    <%- include('partials/adminFooter') %>
    <script src="/js/user-edit.js"></script>
  </body>
</html>