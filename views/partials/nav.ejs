<header class="header">
    <div class="container">
      <a href="/">
        <img src="images/logo-main.png" alt="The Hunger Initiative logo" class="logo">
      </a>
      <input class="menu-button" type="checkbox" id="menu-button" />
      <label class="menu-icon" for="menu-button"><span class="navicon"></span></label>
      <ul class="menu">
        <li><a href="/">Home</a></li>
        <li><a href="about-us">About Us</a></li>
        <% if (user) { %>
          <% if (user.role === 'donor') { %>
            <li><a href="/donor/donations">DONATE</a></li>
          <% } %>
        <% } %>
        <li><a href="volunteer">Volunteer</a></li>
        <li><a href="team">Our Team</a></li>
        <li>
          <% if (user) { %>
            <% if (user.role === 'donor') { %>
              <a class="btn" href="/donor/dashboard">My Dashboard</a>
            <% } else if (user.role === 'admin') { %>
              <a class="btn" href="/admin/dashboard">Admin</a>
            <% } %>
          <% } else { %>
            <a class="btn" href="signup">Sign Up</a>
          <% }%>
        </li>
      </ul>
    </div>
  </header>